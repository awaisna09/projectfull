# =================================================================
# UNIFIED BACKEND CONFIGURATION TEMPLATE
# =================================================================
# Copy this file to config.env and fill in your actual API keys
# NEVER commit config.env to version control!
# =================================================================

# OpenAI API Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith API Configuration (Optional - for monitoring)
# Get your key from: https://smith.langchain.com/
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=imtehaan-ai-tutor

# Unified Server Configuration
HOST=0.0.0.0
PORT=8000

# AI Tutor Configuration
TUTOR_MODEL=gpt-4
TUTOR_TEMPERATURE=1
TUTOR_MAX_TOKENS=4000

# Grading System Configuration
GRADING_MODEL=gpt-4
GRADING_TEMPERATURE=0.1
GRADING_MAX_TOKENS=4000

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG=true

# Performance Configuration
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# CORS Configuration
# For production, set to your actual domain(s):
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=*
ALLOW_CREDENTIALS=true

# Environment (development/production)
ENVIRONMENT=development
